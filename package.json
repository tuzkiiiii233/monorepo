{
  "name": "monorepo-demo",
  "version": "1.0.0",
  "description": "pnpm monorepo 示例项目 - Next.js + TypeScript",
  "private": true,
  "scripts": {
    "dev:a": "pnpm --filter app-a dev",
    "dev:b": "pnpm --filter app-b dev",
    "dev:all": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "build:a": "pnpm --filter app-a build",
    "build:b": "pnpm --filter app-b build",
    "type-check": "pnpm -r type-check",
    "clean": "rm -rf node_modules packages/*/node_modules"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.27.0",
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0"
  }
}
