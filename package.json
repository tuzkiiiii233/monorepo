{
  "name": "monorepo-demo",
  "version": "1.0.0",
  "description": "pnpm monorepo 示例项目 - Next.js + TypeScript",
  "private": true,
  "scripts": {
    "dev:a": "pnpm --filter app-a dev",
    "dev:b": "pnpm --filter app-b dev",
    "dev:all": "pnpm -r --parallel dev",
    "build": "lerna run build",
    "build:changed": "lerna run build --since",
    "build:since-main": "lerna run build --since origin/main",
    "type-check": "lerna run type-check",
    "clean": "lerna clean -y && rm -rf node_modules",
    "version": "lerna version",
    "publish": "lerna publish",
    "changed": "lerna changed",
    "changed:since-main": "lerna changed --since origin/main",
    "diff": "lerna diff"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.27.0",
  "devDependencies": {
    "@commitlint/cli": "^18.4.0",
    "@commitlint/config-conventional": "^18.4.0",
    "autoprefixer": "^10.4.0",
    "husky": "^8.0.0",
    "lerna": "^8.2.4",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {}
}
